<main>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon"  href="../assets/images/hashtag-solid.svg">
    <div id="home-container">

        <section id="quick-links-and-all-users">
            <div id="left-flex">
                <section id="quick-links">
                    <h3>Quick links</h3>
                </section>

                <section id="all-users">
                    <h3>All users</h3>
                    <ul>
                        <% for( let user of all_users){ %>
                            <li>
                                <a href="/users/profile/<%=user.id%>">
                                    <%=user.name%>
                                </a>
                            </li>
                            <% } %>

                    </ul>
                </section>
            </div>
        </section>
        <section id="feed-posts">
            <h3>Posts</h3>

            <% if(locals.user){ %>
                <form action="/posts/create" id="new-post-form" method="post">
                    <!-- <textarea name="content" cols="30" rows="1" placeholder="Type here...." required></textarea> -->
                    <input type="text" style="width: 85%;" name="content" placeholder="Create New Post....." required>

                    <input type="submit" class="button" value="Post">

                </form>
                <%}%>
                <br>
                
                    <div id="posts-list-container">
                        <ul>
                            <hr>
                            <% for(post of posts) {%>


                                <%-include('_post')%>

                                    <%}%>
                        </ul>
                    </div>
        </section>
        <section id="friends-container">
            <div id="friends">
                <h3>Friends</h3>
                <% if(locals.user){%>
                    <ul>
                        <% for(let friend of user_friends){ %>
                            <li>
                                <a href="/users/profile/<%=friend.id%>">
                                    <%=friend.name%>
                                </a>
                            </li>
                            <% } %>
                    </ul>
                    <% }else{%>
                        Sign in to see your friends
                        <%}%>
            </div>
        </section>


    </div>
</main>
<script src="/js/home_posts.js"></script>
<script src="/js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function () {
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>